{
    "compilerOptions": {
      "target": "ES6",              
      "module": "commonjs",          
      "strict": true,                
      "esModuleInterop": true,        
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,          
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",              
      "typeRoots": ["./src/types", "./node_modules/@types"],
    },
    "include": ["src/**/*",],        
    "exclude": ["node_modules"]       
    
  }